@model IEnumerable<PizzaApp.Models.Deliverer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsOnWay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFull)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsOnWay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFull)
        </td>
        <td>
            @if(item.IsOnWay == false)
            {
                @Html.ActionLink("Küldés", "Send", new { id=item.Id }, new { @class = "btn btn-success"})

            } else
            {
                @Html.ActionLink("Visszaérkezett", "Send", new { id=item.Id }, new { @class = "btn btn-warning" })
            }
     
        </td>
    </tr>
}

</table>
