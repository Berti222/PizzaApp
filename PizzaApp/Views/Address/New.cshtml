@model PizzaApp.Models.Address

@{
    ViewBag.Title = "New";
}

<h2>Cím</h2>

@using (Html.BeginForm("Save", "Address"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cím hozzáadás</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(a => a.GuestAddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(a => a.GuestAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(a => a.GuestAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor( a => a.GusetId);

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Mentés" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
